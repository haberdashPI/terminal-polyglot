{
  "name": "terminal-run-cd",
  "publisher": "haberdashPI",
  "repository": "https://github.com/haberdashPI/terminal-run-cd",
  "displayName": "Terminal Run/CD",
  "license": "MIT",
	"description": "Changed directories and run scripts in the terminal across multiple languages.",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.31.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
    "onCommand:terminal-run-cd.open-terminal",
    "onCommand:terminal-run-cd.new-terminal",
    "onCommand:terminal-run-cd.send-text",
		"onCommand:terminal-run-cd.cd",
		"onCommand:terminal-run-cd.global_cd",
    "onCommand:terminal-run-cd.run"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [{
      "command": "terminal-run-cd.send-text",
      "title": "send text",
      "category": "Terminal Run/CD"
    },
    {
      "command": "terminal-run-cd.open-terminal",
      "title": "open terminal",
      "category": "Terminal Run/CD"
    },
    {
			"command": "terminal-run-cd.cd",
      "title": "change directory",
      "category": "Terminal Run/CD"
		},
		{
			"command": "terminal-run-cd.global_cd",
      "title": "global change directory",
      "category": "Terminal Run/CD"
		},
		{
			"command": "terminal-run-cd.run",
			"title": "run file",
      "category": "Terminal Run/CD"
    }],

    "configuration": {
      "type": "object",
      "title": "Terminal Run/CD Configuration",
      "properties": {
        "terminal-run-cd.language-config": {
          "type": "object",
          "description": "Language-specific commands to run scripts and change directories",
          "default": {
            "python": {
              "run": "exec(open(\"%\").read(), globals())",
              "cd": "import os; os.chdir(\"%\")"
            },
            "clojure": {"run": "(load-file \"%\")", "cd": ""},
            "julia": {"run": "include(\"%\")", "cd": "cd(\"%\")"},
            "ruby": {"run": "load '%'", "cd": "Dir.chdir('%')"},
            "r": {"run": "source(\"%\")", "cd": "setwd(\"%\")"},
            "matlab": {"run": "run '%'", "cd": "cd '%'" },
            "javascript": {"run": ".load \"%\"", "cd": "process.chdir(\"%\")"}
          },
          "patternProperties": {
            ".*": { "cd": {"type": "string"}, "run": {"type": "string"} }
          }
        }
      }
    }

	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "yarn run compile && node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"typescript": "^3.3.1",
		"vscode": "^1.1.28",
		"tslint": "^5.12.1",
		"@types/node": "^10.12.21",
		"@types/mocha": "^2.2.42"
	}
}
